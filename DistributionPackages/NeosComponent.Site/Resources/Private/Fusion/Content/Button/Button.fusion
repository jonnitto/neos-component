prototype(NeosComponent.Site:Content.Button) < prototype(Neos.Neos:ContentComponent) {
    label = Neos.Neos:Editable {
        property = 'label'
    }
		link = ${q(node).property('buttonLink')}
		renderAsLink = ${site.context.inBackend ? false : true}

    renderer = afx`
        <a @if.render={props.renderAsLink} href={props.link} target="_blank" class="neoscomponent-button">{props.label}</a>
				<div @if.render={!props.renderAsLink} class="neoscomponent-button">{props.label}</div>
    `
}
